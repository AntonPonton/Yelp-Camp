<% layout('layouts/boilerplate')%>

<!--Grid Layout -->
<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
  <% for (let campground of campgrounds) { %>
  <div class="col">
    <div class="card h-100">
      <a href="/campgrounds/<%=campground._id%>">
        <img
          src="<%= campground.images[0].url %>"
          class="card-img-top square img-fluid"
          alt="..."
        />
      </a>
      <div class="card-body">
        <!-- Title -->
        <h5 class="d-inline card-title"><%= campground.title %></h5>
        <!-- Rating -->
        <div class="d-inline float-end">
          <img
            class="d-inline align-baseline"
            src="https://res.cloudinary.com/dbkdxsoia/image/upload/v1662231684/YelpCamp/star-svgrepo-com_gxflaa.svg"
            alt="star icon"
            width="12"
            height="12"
          />
          <!-- If no ratings display n/a  else display rating-->
          <% if (campground.rating === 0){ %>
          <p class="d-inline">n/a</p>
          <% } else { %>
          <div class="d-inline"><%= campground.rating %></div>
          <br />
          <% } %>
        </div>
        <!-- Location -->
        <h6 class="card-subtitle mb-2 mt-2 text-muted">
          <%= campground.location %>
        </h6>
        <!-- Price -->
        <p class="card-text">
          <small class="text-muted"
            ><b><%= campground.price %> CHF</b> / per night
          </small>
        </p>
      </div>
      <div class="card-footer">
        <small class="text-muted"
          >Submitted by: <%= campground.author.username %></small
        >
      </div>
    </div>
  </div>
  <% } %>
</div>

<div class="position-sticky bottom-0" style="width: 100%; height: 80px">
  <div class="position-absolute top-0 start-50 translate-middle">
    <a href="/campgrounds/map">
      <button
        type="button"
        class="btn btn-dark btn-lg rounded-pill shadow-lg px-4 py-2"
      >
        Show map
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-map"
          viewBox="0 0 16 16"
        >
          <path
            fill-rule="evenodd"
            d="M15.817.113A.5.5 0 0 1 16 .5v14a.5.5 0 0 1-.402.49l-5 1a.502.502 0 0 1-.196 0L5.5 15.01l-4.902.98A.5.5 0 0 1 0 15.5v-14a.5.5 0 0 1 .402-.49l5-1a.5.5 0 0 1 .196 0L10.5.99l4.902-.98a.5.5 0 0 1 .415.103zM10 1.91l-4-.8v12.98l4 .8V1.91zm1 12.98 4-.8V1.11l-4 .8v12.98zm-6-.8V1.11l-4 .8v12.98l4-.8z"
          />
        </svg>
      </button>
    </a>
  </div>
</div>

<script src="/javascripts/search.js"></script>
